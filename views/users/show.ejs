<%- include("../partials/header") %>

<section class="section1">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">
        <div class="card" style="border-radius: 15px">
          <div class="card-body text-center">
            <div class="mt-3 mb-4 p-4">
              <img src=<%= (user.avatar) ? (user.avatar) :
              ("https://th.bing.com/th/id/OIP.fAwVkyeKts4qVbrQVzwERAAAAA?pid=ImgDet&w=300&h=300&rs=1")%>
              class="shadow-4 img-fluid img" style="width: 150px" />
            </div>
            <h1 class="mb-2"><%= user.firstName + " " + user.lastName %></h1>
            <p class="text-muted mb-4">
              <% if(user.aboutme){ %> <%= user.aboutme %>
              <span class="mx-2"> | </span>
              <% } %>
              <a href="mailto:<%= user.email %>"><%= user.email %></a>
            </p>

            <div class="col-md-12 offset-md-6 text-center mx-auto">
              <h3 class="username-p text-left">
                <%= user.username %>'s campgrounds
              </h3>
              <% campgrounds.forEach(campground => { %>
              <div class="col-md-4 col-sm-6">
                <div class="thumbnail card">
                  <img
                    src="<%= campground.image%>"
                    alt="<%= campground.name %>"
                  />
                  <div class="caption">
                    <h4 class="caption">
                      <a href="/campgrounds/<%= campground.id %>"
                        ><%= campground.name %></a
                      >
                    </h4>
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("../partials/footer") %>
